---
import { t } from "i18next";
import BloombergImg from "../../assets/images/bloomberg.png";
import RhythmImg from "../../assets/images/rhythm-in-motion.jpg";
import { Image } from "@astrojs/image/components";
---
 
<div class="container mt-5" data-aos="fade-up" id="entertainment">
  <h1 class="text-center">{t("entertainment")}</h1>

  <div class="row">
    <div class="col-12 col-lg-6 text-center">
      <a
        href="https://acuteinflections.com/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Image src={BloombergImg} alt="Acute Inflections site" style="height: 320px; width: 390px; object-position: left; object-fit: cover;"  />
        <p class="mt-3">Acute Inflections site</p>
      </a>
    </div>
    <div class="col-12 col-lg-6 text-center">
      <a
        href="https://www.rhythminmotion.biz/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <Image src={RhythmImg} alt="Rhythm In Motion" height={320} width={390} />

        <p class="mt-3">Rhythm In Motion</p>
      </a>
    </div>
  </div>
</div>
