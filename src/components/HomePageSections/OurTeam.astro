---
import { Image } from "@astrojs/image/components";
import AmandaPilarSmithImg from "../../assets/images/team/Amanda_Smith.webp";
import { t } from "i18next";
---

<section class="container" id="team-section">
  <h1 class="text-center fw-bold mb-4" data-aos="fade-up">{t("our-team")}</h1>

  <div class="d-flex justify-content-between">
    <div
      class="text-center d-flex justify-content-center flex-column align-items-center"
    >
      <Image
        class="d-block mx-md-auto mw-100 mb-3"
        src={AmandaPilarSmithImg}
        alt="Amanda"
        width={250}
        height={250}
        format="webp"
      />
      <h2>Amanda</h2>
    </div>
    <div
      class="text-center d-flex justify-content-center flex-column align-items-center"
    >
      <Image
        class="d-block mx-md-auto mw-100 mb-3"
        src={AmandaPilarSmithImg}
        alt="Diego"
        width={250}
        height={250}
        format="webp"
      />
      <h2>Diego</h2>
    </div>
    <div
      class="text-center d-flex justify-content-center flex-column align-items-center"
    >
      <Image
        class="d-block mx-md-auto mw-100 mb-3"
        src={AmandaPilarSmithImg}
        alt="Michelle"
        width={250}
        height={250}
        format="webp"
      />
      <h2>Michelle</h2>
    </div>
  </div>
</section>
