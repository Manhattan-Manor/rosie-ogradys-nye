---
import bannerVideo from "../../assets/videos/banner-video.mp4";
import logo from "../../assets/images/logo.svg";
import { t } from "i18next";
import { Image } from "@astrojs/image/components";
import { Trans } from "astro-i18next/components";
import i18next from "i18next";

const isSoldout = false;
const language = i18next.language;
---

<div class="video-background">
  <video autoplay loop muted id="background-video">
    <source src={bannerVideo} type="video/mp4" />
    Your browser does not support the video tag.
  </video>
</div>
<div class="banner-info">
  <Image
    src={logo}
    alt="Manhattan Manor Logo"
    width={167}
    height={94}
    loading="eager"
  />{
    isSoldout ? (
      <div class="container justify-content-center align-items-center">
        <h3 style="color: rgb(188, 6, 6); font-weight: bold;">
          {t("popup.soldout.title")}
        </h3>
        <p class="slogan">{t("popup.soldout.message")} <br> {t("popup.soldout.message-notification")}</p>
        <form id="waitlistForm" class="soldout-form">
          <div class="input-group mb-4">
            <input
              id="emailInput"
              type="email"
              class="form-control"
              style="width: 430px;"
              placeholder={t("popup.soldout.input-placeholder")}
              aria-label="Email"
              required
            />
            <button class="btn btn-primary" id="btn-join" type="submit">
              {t("popup.soldout.button")}
            </button>
          </div>
        </form>
      </div>
    ) : (
      <span>
        <p class="slogan">
          <Trans i18nKey="common.slogan">
            New Year's Eve Party <br />
            Street Live View of the Ball Drop <br />
            Times Square <br />
            New York City <br />
            Wednesday, December 31, 2025
          </Trans>
        </p>
        <a href="#who-we-are-section" class="bounce" aria-label="Scroll down">
          <i class="bi bi-chevron-down" />
        </a>
        
        <p class="early-bird">
          {t("common.early-bird")}
        </p>

        <a class="btn btn-primary" 
          href={ `https://nye.manhattanmanor.com/${(language == 'es' ? language + "/" : "")}tickets`}
          target="_blank"
        >
          {t("common.join-waiting-list")}
        </a>
      </span>
    )
  }
  {/* <p class="slogan">
    <Trans i18nKey="common.slogan">
      New Year's Eve Party <br />
      Street Live View of the Ball Drop <br />
      Times Square <br />
      New York City <br />
      2026
    </Trans>
  </p>
  <a href="#who-we-are-section" class="bounce" aria-label="Scroll down">
    <i class="bi bi-chevron-down"></i>
  </a>
  <a 
    href="https://www.nye.manhattanmanor.com/tickets/"
    class="btn btn-primary"
    target="_blank"
  >
    {t("common.buy-your-tickets")}  
  </a> */}
</div>

<style lang="scss">
  .sold-out-msg {
    color: red;
  }
  .slogan {
    color: white;
    font-size: 1.5rem;
    font-weight: 300;
  }

  .video-background {
    position: relative;
    width: 100%;
    overflow: hidden;
    height: 100vh;
  }

  .video-background video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw !important;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }

  .banner-info {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
  }

  .banner-info img {
    margin-bottom: 20px;
  }

  .bounce {
    display: block;
    color: white;
    font-size: 2rem;
    margin-top: 20px;
    animation: bounce 1.5s infinite;
    cursor: pointer;

    &:hover {
      color: #f5f5f5;
    }
  }

  .early-bird{
    color: red;
    font-weight: bold;
    font-size: 18px;
  }

  @keyframes bounce {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(10px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>

<script>
  import { Waitlist } from "../../classes/Waitlist";
  const waitlistForm = document.getElementById("waitlistForm");
  const emailInput = document.getElementById("emailInput");
  const buttonJoin = document.getElementById("btn-join");

  emailInput?.addEventListener("blur", () => {
    buttonJoin.disabled = false;
  });

  waitlistForm?.addEventListener("submit", async (event) => {
    event.preventDefault();

    const email = emailInput.value;

    try {
      const waitlist = new Waitlist(email);
      buttonJoin.disabled = true;
      const message = await Waitlist.create(waitlist);
      alert(message);
    } catch (error) {
      buttonJoin.disabled = false;
      alert("Failed to join the waitlist. Please try again later.");
    }
  });
</script>