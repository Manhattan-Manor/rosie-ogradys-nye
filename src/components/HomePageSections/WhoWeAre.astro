---
import { Image } from "@astrojs/image/components";
import outsidePicture from "../../assets/images/mm-outside.webp";
import { t } from "i18next";
---

<section class="container" id="who-we-are-section">
  <div class="row" data-aos="fade-up">
    <div class="col-12 col-md-6 pic-container">
      <Image
        src={outsidePicture}
        alt="Manhattan Manor Outside"
        width={393}
        height={320}
        format="webp"
      />
    </div>
    <div class="col-12 col-md-6 text">
      <h1>{t("who-we-are")}</h1>
      <p>
        {t("who-we-are.description")}
      </p>
      <a
        href="https://linktr.ee/rosieogradys"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-secondary text-uppercase py-3 px-4"
        >{t("upcoming-events.view-all")}</a
      >
    </div>
  </div>
</section>

<style>
  section {
    margin-top: 70px;
  }

  .pic-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .text {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    flex-direction: column;
    max-width: 600px;
  }
</style>
