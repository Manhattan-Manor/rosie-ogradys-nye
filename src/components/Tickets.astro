<style lang="scss">
  @import "../assets/styles/_colors.scss";

  .prices {
    hr {
      border-color: $primary;
      opacity: 1;

      @media (min-width: 992px) {
        max-width: 650px;
      }
    }

    p {
      display: flex;
      color: white;
      justify-content: space-between;
      align-items: center;
    }

    h3 {
      color: $primary;
      font-weight: bold;
    }

    .btn {
      color: white;
    }
  }
