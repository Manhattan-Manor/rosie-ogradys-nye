<script>
  const response = await fetch(
    "https://cms.manhattanmanor.com/api/content/item/nyeterms?locale=es",
    {
      method: "GET",
      headers: {
        "Content-Type": "application/json",
        "api-key": import.meta.env.PUBLIC_CMS_API_KEY,
